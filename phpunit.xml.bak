<phpunit bootstrap="vendor/autoload.php">
   <!-- Diretórios contendo os arquivos de teste -->
   <testsuites>
      <testsuite name="Test Suite">
         <directory>tests</directory>
      </testsuite>
   </testsuites>

   <!-- Configuração para geração do relatório de cobertura -->
   <filter>
      <whitelist>
         <!-- Diretórios que devem ser incluídos na cobertura -->
         <directory suffix=".php">src</directory>
      </whitelist>
   </filter>

   <!-- Configuração para geração do relatório de cobertura em XML -->
   <logging>
      <log type="coverage-clover" target="tests/coverage/coverage.xml"/>
   </logging>
</phpunit>
